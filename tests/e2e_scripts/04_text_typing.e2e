# Text Typing Test
# Tests typing text into all input fields on the text input screen

# Navigate to the text input screen
goto_screen text_input
wait 0.5

# Verify we're on the text input screen
expect_text "Text Input Component Demo"
expect_text "Enter your details above"

# Fill out Username
focus_element username_input
wait 0.2
type "testuser"
wait 0.3
expect_text "Username: testuser"

# Fill out Email
focus_element email_input
wait 0.2
type "test@example.com"
wait 0.3
expect_text "Email: test@example.com"

# Fill out Password (shows masked)
focus_element password_input
wait 0.2
type "secretpass"
wait 0.3
expect_text "Password changed"

# Fill out Search
focus_element search_input
wait 0.2
type "search query"
wait 0.3
expect_text "Searching for: search query"

# Submit the form
focus_element submit_btn
wait 0.2
key ENTER
wait 0.3
expect_text "Submitted! User: testuser, Email: test@example.com"

screenshot text_typing_complete
